{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "seed": {
      "inputs": ["scripts/endpoints/**", "scripts/helpers/**"],
      "outputs": [
        "src/clients/auth-api/endpoints/**",
        "src/clients/local-api/endpoints/**",
        "src/clients/remote-api/endpoints/**"
      ]
    },
    "build": {
      "dependsOn": ["seed"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["seed"]
    },
    "release": {
      "dependsOn": ["build"]
    }
  }
}
